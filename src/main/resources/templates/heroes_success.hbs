{{#partial "title" }}
    {{name}}
{{/partial}}


{{#partial "content"}}

    <h3>New Hero {{name}} added</h3>
    <h5>HERO ATTRIBUTES</h5>
    <p>Name: {{Heroes.name}}</p>
    <p>Age: {{Heroes.age}}</p>
    <p>Special Powers: {{Heroes.specialPower}}</p>
    <p>Weakness: {{Heroes.weakness}}</p>
    <p>Wow! I see you added a {{specialPower}}</p>
    <p>Squad: {{Heroes.squadName}}</p>

    <a href="/heroes/list"><button class="btn btn-primary">View All</button></a>

{{/partial}}

